<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="expertViewModel"
            type="com.demo.quickadvice.ui.viewmodels.ExpertsListViewModel" />

        <variable
            name="expertAdapter"
            type="com.demo.quickadvice.ui.adapters.ExpertListAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/expert_bg"
        tools:context=".ui.activities.ExpertsListActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="160dp" />

        <TextView
            android:id="@+id/expert_list_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/american_typewriter_font"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="38sp"
            app:layout_constraintBottom_toTopOf="@id/expert_search_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <ImageView
            android:id="@+id/expert_profile_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_profile_icon"
            app:layout_constraintBottom_toBottomOf="@id/expert_list_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/expert_list_header" />

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/expert_search_tv"
            style="@style/expert_details_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/search_bg"
            android:drawableEnd="@drawable/ic_person_search"
            android:ems="5"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:inputType="text"
            android:padding="8dp"
            android:singleLine="true"
            app:layout_constraintBottom_toTopOf="@id/top_guide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/expert_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_guide"
            app:layout_constraintVertical_bias="0"
            app:setAdapter="@{expertAdapter}"
            tools:itemCount="4"
            tools:listitem="@layout/item_expert" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>